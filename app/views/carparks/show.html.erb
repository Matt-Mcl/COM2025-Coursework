<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @carpark.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @carpark.address %>
</p>

<%= link_to 'Add Space', new_space_path(carpark_id: @carpark) %>
<%= link_to 'Edit', edit_carpark_path(@carpark) %> |
<%= link_to 'Back', carparks_path %>

<p>Spaces:</p>
<table>
  <% @carpark.spaces.each do |space| %>
    <tr></tr>
    <td>
      <%= space.space_number %>
    </td>
    <td>
      <%= space.hourly_cost %>
    </td>
    <td>
      <%= link_to 'Show', space %>
    </td>
    <td>
      <%= link_to 'Edit', edit_space_path(space) %>
    </td>
    <td>
      <%= link_to 'Destroy', space, :method => :delete, :data => {:confirm => 'Are you sure?'} %>
    </td>
  <% end %>
</table>