<%= form_with(model: ticket, local: true) do |form| %>
  <% if ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
      <% ticket.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label t('.carpark'), class: 'form_label_class' %>
    <%= form.collection_select :space_id, Carpark.order(:name), :id, :name, {}, include_blank: false, class: 'range_class' %>
  </div>

  <div class="field">
    <%= form.label t('.registration_number'), class: 'form_label_class' %>
    <%= form.text_field :registration_number, class: 'text_class' %>
  </div>

  <div class="field">
    <%= form.label t('.paid_from'), class: 'form_label_class' %>
    <%= form.datetime_select :paid_from, { ampm: true, order: [:day, :month, :year], minute_step: 15 }, class: 'date_class' %>
  </div>

  <div class="field">
    <%= form.label t('.paid_to'), class: 'form_label_class' %>
    <%= form.datetime_select :paid_to, { ampm: true, order: [:day, :month, :year], minute_step: 15 }, class: 'date_class' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
