<title><%= t('.title')%></title>
<h1><%= t('.title')%></h1>
<p><%= t('.description')%></p>

<%= form_tag request_contact_path, method: 'post' do %>
  <%= label_tag :name, t('.name') %>
  <%= text_field_tag :name, '', title: t('.enter_name'), size: 50 %>
  <%= label_tag :email, t('.email') %>
  <%= email_field_tag :email, '', title: t('.enter_email') %>
  <%= label_tag :phone, t('.phone_number') %>
  <%= telephone_field_tag :phone, '', title: t('.enter_phone_number') %>
  <%= label_tag :query, t('.query') %>
  <%= text_field_tag :query, '', title: t('.enter_query'), size: 100 %>
  <%= submit_tag t('.submit') %>
<% end %>

